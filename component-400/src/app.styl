@import 'nib'

$blue = #2ba6cb

h2
    font-size: 20px
    display: inline-block
    margin: 0
    line-height: 0.5

table
    width: 100%

a
    cursor: pointer

.help, .help-flyout
    cursor: pointer
    content: "i"
    padding: 0 4px
    font-size: 12px
    line-height: 14px
    text-align: center
    color: #fff
    background: $blue
    display: inline-block
    font-family: serif
    font-weight: bold
    font-style: italic
    text-transform: lowercase
    vertical-align: middle

    // Reset for hint.css
    &:after, &:before, .flyout
        font-style: normal
        text-transform: none
        white-space: pre
        text-align: left
        // not ideal, change with "default" when implemented
        font-family: sans-serif

.help-flyout
    position: relative

    .flyout
        position: absolute
        color: #333
        font-weight: normal
        top: -20px
        left: 20px
        // Override foundation
        padding: 2px
        
        tr
            td:first-child
                text-transform: capitalize

.section
    padding: 10px

    &:nth-child(even)
        border: 1px solid #e6e6e6
        border-width: 1px 0

    header
        margin-bottom: 10px
        line-height: 37px

        .button
            margin-left: 10px
            float: right

        *
            vertical-align: middle

.header
    header
        table
            width: auto
            border: 0

            tr
                background: #FFF

                &:nth-child(1)
                    font-weight: bold

                td
                    padding: 0
                    font-size: 20px

                    &:nth-child(1)
                        text-align: right

                    &:nth-child(2)
                        padding-left: 5px
                        text-align: left

.duplicates
    table
        border: 1px solid #ddd !important
        margin-bottom: 10px

table.striped
    thead
        th            
            .help
                margin-bottom: 2px
    tbody
        td.odd
            background: #f9f9f9
        
        td.even
            background: #fff

.summary
    dl.tabs
        dd
            a
                text-transform: capitalize

ul.inline
    list-style: none
    padding: 0
    margin: 0
    display: inline-block

    li
        display: inline-block

        &:not(:last-child):after
            content: ", "

div.paginator

    .dropdown
        &.secondary::after
            border-color: #1d1d1d transparent transparent transparent


        ul
            top: 27px
            width: 0

    ul.pagination
        text-align: left
        margin-bottom: 20px

        li
            display: inline-block
            margin-left: 0
            float: left
            user-select: none

            &.arrow:not(.unavailable)
                background: lighten($blue, 90%)