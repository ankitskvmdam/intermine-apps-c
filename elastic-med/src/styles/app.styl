@import 'nib'

body
    background: #efefef
    color: #333
    border-top: 6px solid #F8AF2D

h1, h2, h3, h4, h5, h6, p, li, input[type="text"], .button
    font-family: 'Source Sans Pro', sans-serif

ul
    list-style-type: none

.box
    padding: 20px
    width: 960px
    margin: 0 auto
    margin-top: 20px
    margin-bottom: 20px
    background: #FFF

    h1
        font-weight: bold

.alert-box
    p
        margin: 0
        font-size: 14px

ul.results
    margin: 0

    li.result
        &:not(:last-child)
            border-bottom: 1px dashed #CCC

        &:after
            clear: both
            display: block
            content: ""

        .highlight
            em
                font-style: normal
                background: rgba(yellow, 0.5)
                padding: 0 2px
                margin: 0 -2px

        .preview, .body
            margin: 20px 0

        .preview
            border: 1px solid #AAA
            box-shadow: 2px 2px 0 #E0E0E0
            cursor:pointer
            background: #FFF
            width: 60px
            height: 75px
            padding: 8px
            font-size: 4px
            vertical-align: top
            overflow: hidden
            position: relative
            line-height: 5px
            text-align: justify
            float: left

            &:hover
                .fa
                    opacity: 1

            &:after
                content: ""
                position: absolute
                bottom: 0
                left: 0
                width: 100%
                height: 8px
                background: #FFF

            .fa
                font-size: 16px
                position: absolute
                top: 0
                left: 0
                background: rgba(255,255,255,0.5)
                padding: 29px 22px
                z-index: 2
                opacity: 0
                transition: opacity 0.2s ease-in-out

        .body
            width: 840px
            float: right
            font-size: 12px

            h4
                font-size: 14px
                font-weight: bold
                margin:0

            ul.authors
                line-height: 1
                margin: 4px 0

                li
                    font-size: 12px
                    display: inline-block
                    color: #666

                    &:not(:last-child):not(:first-child)
                        margin-left: -4px

                        &:before
                            content: ", "

                    &:last-child:not(:first-child)
                        &:before
                            content: "& "

            .journal
                display: block

            .meta
                display: inline-block

                &:not(:last-child)
                    margin-right: 10px

            .score
                float: right
                margin-left: 10px
                padding: 3px 4px
                font-size: 11px
                line-height: 1
                border-radius: 2px
                box-shadow: inset 0 -1px 0 rgba(0, 0, 0, 0.12)