@import 'nib'

$width = 960px

body
    background: #efefef url('../img/bg.png')
    color: #333

h1, h2, h3, h4, h5, h6, p, li, input[type="text"], .button
    font-family: 'Source Sans Pro', sans-serif

ul
    list-style-type: none

.box
    padding: 20px
    width: $width
    margin: 0 auto
    margin-top: 20px
    margin-bottom: 20px
    background: #FFF
    box-shadow: 0px 1px 3px rgba(65,55,45,0.3)

    h1
        font-weight: bold

.button
    user-select: none

.alert-box
    p
        margin: 0
        font-size: 14px

.search
    // Make sure these match the input field style.
    .faux
        visibility: hidden
        display: block
        font-size: 14px
        padding: 8px
        font-family: 'Source Sans Pro', sans-serif
        border: 1px solid #FFF
        position: absolute

    // .fa-dropdown
    .suggestions
        position: absolute
        // Point to the caret.
        top: 32px
        // Fix padding of faux and the tip of dropdown.
        margin-left: -24px

        li
            // Remove default highlight.
            &:hover
                background: inherit

            // Explicitely activate.
            &.active, &.hover
                background: #eee

.breadcrumbs
    li:first-child a
        cursor: default
        color: #333
        text-decoration: none

.document
    &:after
        clear: both
        display: block
        content: ""    

    .highlight
        em
            font-style: normal
            background: rgba(yellow, 0.5)
            padding: 0 2px
            margin: 0 -2px

    .abstract, .body
        margin: 20px 0

    .abstract
        text-align: justify

    .body
        h4
            font-weight: bold
            margin:0

        ul.authors
            margin: 10px 0

            li
                display: inline-block
                color: #666

                &:not(:last-child):not(:first-child)
                    margin-left: -4px

                    &:before
                        content: ", "

                &:last-child:not(:first-child)
                    &:before
                        content: "& "

        .journal
            display: block

        .meta
            display: inline-block

            &:not(:last-child)
                margin-right: 10px

        .score
            float: right
            margin-left: 10px
            padding: 3px 4px
            font-size: 13px
            line-height: 1
            border-radius: 2px
            box-shadow: inset 0 -1px 0 rgba(0,0,0,0.12)
            border: 1px solid rgba(0,0,0,0.25)
            user-select: none

            &.dark
                color: rgba(0,0,0,0.5)

            &.light
                color: rgba(255,255,255,0.75)

    .keywords
        margin: 12px 0 0 0

        li
            display: inline-block

            span
                opacity: 0.7

            &:hover
                span
                    opacity: 1

.page
    &.detail
        .state
            h3:not(.error)
                display: none

        .document
            .body
                .score
                    margin-top: 5px

                .journal
                    margin: 10px 0

            .abstract
                line-height: 1.5

.state
    h3
        display: inline-block

    .spinner
        vertical-align: text-top
        margin-left: 6px

ul.results
    margin: 0

    li.document.result
        &:not(:last-child)
            border-bottom: 1px dashed #CCC

        .body
            width: 840px
            float: right
            font-size: 12px

            h4
                font-size: 14px

            ul.authors
                line-height: 1
                margin: 4px 0

                li
                    font-size: 12px

            .score
                font-size: 11px

        a.preview
            text-decoration: none
            color: inherit

            .abstract
                border: 1px solid #AAA
                box-shadow: 2px 2px 0 #E0E0E0
                background: #FFF
                width: 60px
                height: 75px
                padding: 8px
                font-size: 4px
                vertical-align: top
                overflow: hidden
                position: relative
                line-height: 5px
                float: left

                &:hover
                    .fa
                        opacity: 1

                &:after
                    content: ""
                    position: absolute
                    bottom: 0
                    left: 0
                    width: 100%
                    height: 8px
                    background: #FFF

                .fa
                    font-size: 16px
                    position: absolute
                    top: 0
                    left: 0
                    background: rgba(255,255,255,0.5)
                    padding: 29px 22px
                    z-index: 2
                    opacity: 0
                    transition: opacity 0.2s ease-in-out

// Keyboard icon; see: http://askubuntu.com/
kbd
    background: #eee
    border-style: solid
    border-color: #ccc #aaa #888 #bbb
    padding: 0.1em 0.6em
    border: 1px solid #ccc
    font-size: 11px
    background: #f7f7f7
    color: #333
    box-shadow: 0 1px 0px rgba(0,0,0,0.2), 0 0 0 2px #fff inset
    border-radius: 3px
    display: inline-block
    margin: 0 0.1em
    text-shadow: 0 1px 0 #fff
    line-height: 1.4
    white-space: nowrap

// Loading spinner.
.fa-spinner
    display: inline-block
    animation: spin 2s infinite linear

@-moz-keyframes spin {
    from { -moz-transform: rotate(0deg) }
    to { -moz-transform: rotate(360deg) }
}
@-webkit-keyframes spin {
    from { -webkit-transform: rotate(0deg) }
    to { -webkit-transform: rotate(360deg) }
}
@keyframes spin {
    from { transform:rotate(0deg) }
    to { transform:rotate(360deg) }
}