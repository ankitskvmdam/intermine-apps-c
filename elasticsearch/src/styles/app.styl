@import 'nib'

body
    background: #efefef
    color: #333
    border-top: 6px solid #F8AF2D

h1, h2, h3, h4, h5, h6, p, li, input[type="text"], .button
    font-family: 'Source Sans Pro', sans-serif

ul
    list-style-type: none

.box
    padding: 20px
    width: 960px
    margin: 0 auto
    margin-top: 20px
    margin-bottom: 20px
    background: #FFF

.alert-box
    p
        margin: 0
        font-size: 14px

ul.results
    margin: 0

    li.result
        &:not(:last-child)
            border-bottom: 1px dashed #CCC

        &:after
            clear: both
            display: block
            content: ""

        .preview, .body
            margin: 20px 0

        .preview
            border: 1px solid #AAA
            box-shadow: 2px 2px 0 #E0E0E0
            cursor:pointer
            background: #FFF
            width: 60px
            height: 75px
            padding: 8px
            font-size: 4px
            vertical-align: top
            overflow: hidden
            position: relative
            line-height: 5px
            text-align: justify
            float: left

            &:after
                content: ""
                position: absolute
                bottom: 0
                left: 0
                width: 100%
                height: 8px
                background: #FFF

        .body
            width: 840px
            float: right

            h4
                font-size: 14px
                font-weight: bold
                margin:0

            ul.authors
                line-height: 1
                margin: 4px 0

                li
                    font-size: 12px
                    display: inline-block
                    color: #666

                    &:not(:last-child):not(:first-child)
                        margin-left: -4px

                        &:before
                            content: ", "

                    &:last-child:not(:first-child)
                        &:before
                            content: "& "

            .meta
                font-size: 12px
                display: inline-block

                &:not(:last-child)
                    margin-right: 10px

            .label
                float: right
                margin-left: 10px