<div class="body">
    <app-label></app-label>

    <h4 class="highlight">{{{ highlight title }}}</h4>

    <ul class="authors">
        {{ #authors }}
        <li>{{ author this }}</li>
        {{ /authors }}
    </ul>

    <em class="journal">in {{ journal }}</em>

    {{ #isPublished issue.published }}
    <div class="meta hint--top" data-hint="{{ date issue.published }}">Published {{ ago issue.published }}</div>
    {{ else }}
    <div class="meta">In print</div>
    {{ /isPublished }}

    {{ #id.pubmed }}
    <div class="meta">
    PubMed: <a target="new" href="http://www.ncbi.nlm.nih.gov/pubmed/{{ id.pubmed }}">{{ id.pubmed }}</a>
    </div>
    {{ /id.pubmed }}
    
    {{ #id.doi }}
    <div class="meta">
    DOI: <a target="new" href="http://dx.doi.org/{{ id.doi }}">{{ id.doi }}</a>
    </div>
    {{ /id.doi }}
</div>

{{ #abstract }}
<div class="preview highlight">
    {{{ highlight abstract }}}
</div>
{{ /abstract }}