.content
    position relative
    .wrapper
        .right, .left
            opacity 0
            position absolute
            height 100%
            width 4px
            box-shadow 0 0 25px #000
            top 0
            transition 0.3s

        .right
            right -4px
        .left
            left -4px
        
.table
    &.header-fixed 
        width 100%
        tr
            display flex
            width 100%
            flex-wrap nowrap

            .description
                flex-grow 1
                flex-basis 200px
                min-width 150px

            .pValue
                flex-basis 80px
                min-width 75px
                text-align center
                word-wrap break-word
                flex-grow 1

            .matches, th.description:last-child
                flex-basis 65px
                min-width 60px
                text-align center
                word-wrap break-word
                flex-grow 1

            th, td
                padding 8px 0


        tbody
            display block
            overflow auto

    .check-header, td.check
        width 25px !important
        text-align center
        
